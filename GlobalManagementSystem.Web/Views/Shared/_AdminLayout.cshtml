        content="Ample Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Global Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/dark-hive/jquery-ui.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/marquee.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pop.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GlobalManagementSystem.Web.styles.css" asp-append-version="true" />
    <link rel="canonical" href="https://www.wrappixel.com/templates/ample-admin-lite/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
     <script src="https://cdn.tiny.cloud/1/7smme7el0x245bowuthh2amqugr6hg47h1umgs8o58c7ud8e/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="plugins/images/favicon.png">
    <!-- Custom CSS -->
    <link href="plugins/bower_components/chartist/dist/chartist.min.css" rel="stylesheet">
    <link rel="stylesheet" href="plugins/bower_components/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.css">
    <!-- Custom CSS -->
    <link href="~/css/style.min.css" rel="stylesheet">
</head>
<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
        data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <header class="topbar" data-navbarbg="skin5">
          @if (SignInManager.IsSignedIn(User))
           {                   
           }
           else
           {
             <div id="marquee"> 
                <marquee behavior="scroll" direction="left" onmouseover="this.stop();" onmouseout="this.start();">
                    If this text is running too fast, 
                    hover over the text and it will stop. You can use this to broadcast notification.
                </marquee>
             </div>                  
            }
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                @if (SignInManager.IsSignedIn(User))
            {    
               <strong><h5 class="nav-link text-white ">GlobalManagementSystem</h5></strong> 
            }
                

                <div class="navbar-header" data-logobg="skin6">
                    <!-- ============================================================== -->
                    <!-- Logo -->
                    <!-- ============================================================== -->
                    <a class="navbar-brand" href="dashboard.html">
                        <!-- Logo icon -->
                        <b class="logo-icon">
                            <!-- Dark Logo icon -->
                            <!--img src="~/images/G2.png" asp-controller="Home" asp-action="Index" /-->
                        </b>
                        <!--End Logo icon -->
                        <!-- Logo text -->
                        <span class="logo-text">
                            <!--h5 class="nav-link text-dark">GlobalManagementSystem</h5>
                            < dark Logo text -->
                            <!--img src="/images/.png" alt="homepage" /-->
                        </span>
                    </a>
                    <!-- ============================================================== -->
                    <!-- End Logo -->
                    <!-- ============================================================== -->
                    <!-- ============================================================== -->
                    <!-- toggle and nav items -->
                    <!-- ============================================================== -->
                    <a class="nav-toggler waves-effect waves-light text-dark d-block d-md-none"
                        href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                </div>
                <!-- ============================================================== -->
                <!-- End Logo -->
                <!-- ============================================================== -->
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <!-- ============================================================== -->
                    <!-- Right side toggle and nav items -->
                    <!-- ============================================================== -->
                    <ul class="navbar-nav ms-auto d-flex align-items-center">

                        <!-- ============================================================== -->
                        <!-- Search -->
                        <!-- ============================================================== -->
                        @*<li class=" in">
                            <form role="search" class="app-search d-none d-md-block me-3">
                                <input type="text" placeholder="Search..." class="form-control mt-0">
                                <a href="" class="active">
                                    <i class="fa fa-search"></i>
                                </a>
                            </form>
                        </li>*@
                        <!-- ============================================================== -->
                        <!-- User profile and search -->
                        <!-- ============================================================== -->
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li>
                              <a class="profile-pic" href="#">
                              <img src="~/images/users/1.jpg" alt="user-img" width="36"
                              class="img-circle"><span class="text-white font-medium">@User.Identity?.Name</span></a><br>
                              @*<span class="text-white font-medium">@User.FindFirstValue(ClaimTypes.Role)</span>*@
                            </li>
                        }
                        else
                        {
                            
                        }
                        <!-- ============================================================== -->
                        <!-- User profile and search -->
                        <!-- ============================================================== -->
                    </ul>
                </div>
            </nav>
        </header>
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar " data-sidebarbg="skin6">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar ">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <!-- User Profile-->
                        <li class="sidebar-item">
                             <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                 asp-area="" asp-controller="Home" asp-action="Index">
                                 <i class="fas fa-home"></i>
                                 <span>Home</span>
                             </a>
                        </li>
                        <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                        }
                        else
                        {
                           <li class="text-center p-20 upgrade-btn">
                              <a class="btn d-grid btn-info text-white" asp-area="Identity" 
                                  asp-page="/Account/Login"><strong>Login</strong>
                              </a>
                           </li>
                        }
                        </ul>
                        @if (User.IsInRole(Roles.User))
                        {
                            <li class="sidebar-item">
                               <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-controller="Products" asp-action="Index">
                                  <i class="fa-solid fa-cubes"></i>
                                  <span>Products</span>
                               </a>
                            </li>
                            <li class="sidebar-item">
                               <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-controller="Inventories" asp-action="Index">
                                  <i class="fa-solid fa-cart-flatbed"></i>
                                  <span>Inventory</span>
                               </a>
                            </li>
                        }
                        @if (User.IsInRole(Roles.Administrator))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-controller="Employees" asp-action="Index">
                                  <i class="fa-solid fa-users"></i>
                                  <span>Employees</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-area="Identity" asp-page="/Account/Register">
                                  <i class="fa-solid fa-id-card"></i>
                                  <span>Register Users</span>
                                </a>
                            </li>
                                <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-controller="Products" asp-action="Index">
                                  <i class="fa-solid fa-cubes"></i>
                                  <span>Products</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link waves-effect waves-dark sidebar-link" 
                                  asp-controller="Suppliers" asp-action="Index">
                                  <i class="fa-solid fa-city"></i>
                                  <span>Suppliers</span>
                                </a>
                            </li>
                            <li class="sidebar-item" color="black">
                                <a class="nav-link dropdown-toggle" href="#" 
                                    id="navbarDropdownMenuLink" role="button" 
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-cart-flatbed"></i>
                                    <span>Inventory Management</span>
                                </a>
                                <ul class="dropdown-menu mm-collapse mm-show p-3 mb-2 bg-dark text-white" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item"  asp-controller="Makes" asp-action="Index">Make</a></li>
                                    <li><a class="dropdown-item"  asp-controller="ProductTypes" asp-action="Index">Parts Type</a></li>
                                    <li><a class="dropdown-item"  asp-controller="Models" asp-action="Index">Model</a></li>
                                    <li><a class="dropdown-item"  asp-controller="Inventories" asp-action="Index">Inventory</a></li>
                                    <li><a class="dropdown-item"  asp-controller="Restocks" asp-action="Index">Restock</a></li>
                                </ul>
                            </li>
                         }
                         @if (SignInManager.IsSignedIn(User))
                         {
                            <li class="text-center p-20">
                                <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" 
                                   asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button  class="btn d-grid btn-info text-white" target="_blank">Logout</button>
                                </form>
                            </li>
                         }
                     </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                   @RenderBody()
                </div>
            </div>
            <footer class="border-top footer text-dark">
           <div class="container">
             <strong>&copy; @DateTime.Now.Year - GlobalManagementSystem</strong> 
           </div>
        </footer>
        </div>

        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
        
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
