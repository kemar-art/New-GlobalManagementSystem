@model InventoryVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create Inventory</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <select asp-for="ProductId"  class="form-select" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QTY" class="control-label"></label>
                <input asp-for="QTY" class="form-control" />
                <span asp-validation-for="QTY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark"> Back to List</a>&nbsp;
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


